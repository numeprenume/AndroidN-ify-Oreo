        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LightTheme" parent="android:Theme.Material.Light.DarkActionBar"/>

    <style name="DeviceDefault" parent="android:Theme.DeviceDefault"/>

    <style name="DefaultSystemUITheme" parent="android:Theme.DeviceDefault">
        <item name="android:colorBackgroundFloating">#ff212121<!--@android:color/material_grey_900--></item>
